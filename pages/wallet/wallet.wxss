.main {
  width: 100%;
  height: 100%;
  background-color: #ebebeb73;
}
.top {
  width: 100%;
  height: 350rpx;
  position: relative;
  padding: 35rpx 0 0 35rpx;
  background-image: linear-gradient(#edb445, #faecc9);
}
.top-first {
  width: 100%;
  display: flex;
}
.top-img {
  width: 150rpx;
  height: 150rpx;
}
.top-img image {
  width: 100%;
  height: 100%;
}
.top-first .top-title {
  margin-left: 40rpx;
}
.top-first .top-title .title-price {
  margin-top: 20rpx;
  font-size: 60rpx;
  color: red;
}

.detailed {
  border: 1px solid #f3bf56;
  padding: 10rpx;
  text-align: center;
  width: 260rpx;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  margin-left: -130rpx;
}
.amount {
  width: 100%;
  padding: 25rpx 0;
  background-color: white;
  margin-top: 30rpx;
}
.amount-money {
  width: 100%;
  background-color: #ffffff;
  display: flex;
  flex-wrap: wrap;
}
.amount-money .amount-item {
  width: 45%;
  text-align: center;
  background-color: #fefeee;
  height: 160rpx;
  margin: 15rpx 20rpx;
}

.amount-money .amount-item:hover {
  background-color: red;
}
.item-money {
  font-size: 50rpx;
}
.item-text {
  font-size: 30rpx;
  margin-top: 15rpx;
}
